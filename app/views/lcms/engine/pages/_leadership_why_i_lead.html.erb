<!-- Slider main container -->
<div class="swiper-container c-ls-slides c-ls-slides--l">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper c-ls-slides__wrap c-ls-slides__wrap--<%= leadership_posts.count %>">
      <!-- Slides -->
      <% leadership_posts.each do |post| %>
        <div class="swiper-slide c-ls-slides__slide c-ls-slides--l__slide">
          <div class="ls-post">
            <div class="ls-post__img">
              <%= image_tag(post.image_file) if post.image_file.present? %>
            </div>
            <div class="ls-post__body">
              <div class="ls-post__title">
                <%= post.name %>
              </div>
              <div class="ls-post__subtitle">
                <%= post.school %>
              </div>
              <div class="ls-post__txt u-padding-top--base">
                <%= post.description %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
<!-- If we need navigation buttons -->
<div class="c-ls-slides--l__prev c-ls-slides--l__btn c-ls-slides__prev swiper-button-prev show-for-ipad">
  <i class="fa-3x ub-angle-left"></i>
</div>
<div class="c-ls-slides--l__next c-ls-slides--l__btn c-ls-slides__next swiper-button-next show-for-ipad">
  <i class="fa-3x ub-angle-right"></i>
</div>
