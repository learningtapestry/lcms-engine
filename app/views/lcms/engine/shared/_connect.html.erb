<div class="u-bg--primary">
  <div class="o-page">
    <div class="o-connect">
      <h2>Follow us</h2>
      <div class="o-connect__dsc">
        Keep up with the latest from <%= t('ui.unbounded') %> via:
      </div>
      <!-- Go to www.addthis.com/dashboard to customize your tools -->
      <ul class="o-connect__list addthis_toolbox">
        <li>
          <a class="addthis_button_twitter_follow" addthis:userid="<%= ENV['TWITTER_USERNAME'] %>" rel="nofollow">
            <i class="ub-twitter"></i>
          </a>
        </li>
        <li>
          <a class="addthis_button_facebook_follow" addthis:userid="<%= ENV['FB_PAGE'] %>" rel="nofollow">
            <i class="ub-facebook"></i>
          </a>
        </li>
        <!-- <li>
          <a class="addthis_button_vimeo_follow" addthis:userid="<%= ENV['VIMEO_CHANNEL'] %>" rel="nofollow">
            <i class="ub-vimeo"></i>
          </a>
        </li> -->
        <li>
          <a class="addthis_button_youtube_follow" addthis:url="<%= ENV['YOUTUBE_CHANNEL'] %>" rel="nofollow">
            <i class="ub-youtube"></i>
          </a>
        </li>
      </ul>
    </div>
    <hr class="o-connect__hr" />
    <div class="o-connect">
      <h2>Need help?</h2>
      <div class="o-connect__dsc">
        Find answers to commonly asked questions and contact our team.
      </div>
      <div class="o-connect__buttons">
        <div class="o-connect__button">
          <%= react_component('FreshdeskBtn', {text: t('ui.contact_us'), cls: 'o-ub-btn o-ub-btn o-ub-btn--connect o-btn--xs-full'}) %>
        </div>
        <% if (url = ENV['UB_FAQ_URL']).present? %>
          <div class="o-connect__button">
            <a href="<%= url %>" class="o-ub-btn o-ub-btn--faq o-ub-btn--connect o-btn--xs-full" target="_blank">FAQ</a>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="o-connect__hr" />
    <div class="o-connect">
      <h2>Attend the Standards Institute</h2>
      <div class="o-connect__dsc">
        An immersive, engaging five-day professional development experience tailored to leaders and teachers of ELA and math.
      </div>
      <div class="o-connect__button">
        <%= link_to t('ui.learn_more'), 'http://www.standardsinstitutes.org', class: 'o-ub-btn o-ub-btn--connect o-btn--xs-full', target: '_blank' %>
      </div>
    </div>
  </div>
</div>
