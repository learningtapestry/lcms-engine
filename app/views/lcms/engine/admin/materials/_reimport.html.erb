<%= form_tag(lcms_engine.admin_materials_path, method: :post, target: '_blank', data: { turbo: false }) do %>
  <%= hidden_field_tag('material_form[source_type]', material.source_type) %>
  <%= hidden_field_tag('material_form[link]', material.file_url) %>
  <%= hidden_field_tag('material_form[async]', local_assigns[:async].to_i) %>
  <%= submit_tag 'Reimport', class: local_assigns.fetch(:btn_class, 'btn btn-warning'), data: { disable_with: false } %>
<% end %>
