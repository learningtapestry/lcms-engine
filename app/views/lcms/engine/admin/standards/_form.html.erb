<%= simple_form_for @standard, as: :standard, url: lcms_engine.admin_standard_path(@standard), html: { class: 'o-standard-form' } do |f| %>

  <div class="row mb-6">
    <div class="col">
      <label>Name: </label>
      <span><%= @standard.name %></span>
    </div>
  </div>

  <div class="row mb-6">
    <label class="col-md-4">Synonyms: </label>
    <div class="col-md-8"><%= @standard.alt_names.join(' | ') %></div>
  </div>

  <div class="row mb-6">
    <div class="col-md-6">
      <%= f.input :description, as: :ckeditor, input_html: { rows: 5 } %>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <%= f.button :submit, t('ui.save'), name: nil, class: 'btn btn-primary' %>
        <% if @standard.persisted? %>
          <%= link_to t('ui.delete'), lcms_engine.admin_standard_path(@standard), class: 'btn btn-danger', data: { confirm: t('ui.are_you_sure') }, method: :delete %>
        <% end %>
    </div>
  </div>
<% end %>
