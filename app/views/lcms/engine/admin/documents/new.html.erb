<div class="container-fluid">
  <h2 class="text-center p-4"><%= t('.page_title') %></h2>
  <hr>
  <div class="col-sm">
    <%= link_to 'Back to list', lcms_engine.admin_documents_path, class: 'btn btn-success' %>
  </div>
  <hr>
  <div class="row">
    <%= simple_form_for @document_form, url: lcms_engine.admin_documents_path, data: { turbo: false } do |f| %>
      <%= f.input :link, error: f.object.errors[:link].first.try(:html_safe),
                  label: false, placeholder: t('ui.url') %>
      <p>
        <%= f.check_box :async,
                      checked: params.dig(:document_form, :async).nil? || params.dig(:document_form, :async).to_i.positive? %>
        <span><small><%= t('ui.async') %></small></span>
      </p>
      <%= f.button :submit, t('.submit'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
