<% set_page_title 'Lessons Manager' %>

<div class="container-fluid o-adm-list o-adm-documents">
  <h1 class="text-center p-4"><%= t('.title') %></h1>
  <hr>
  <%= render 'search_form' %>
  <hr>
  <div class="row">
    <div class="col-sm-3">
      <p><%= page_entries_info @documents %></p>
    </div>
    <div class="col-sm-2">
      <span class="c-multi-selected--select-all"><%= check_box_tag 'selected_all', 'true' %> Select All on this page</span>
      <br>
      <span class="c-reimport-with-materials__toggle"><%= check_box_tag 'reimport_with_materials', 1 %> Reimport with Materials</span>
    </div>
    <div class="col-sm-2">
      <%= link_to t('.new_lesson'), lcms_engine.new_admin_document_path(query: @query_params), class: 'btn btn-primary m-1' %>
    </div>
    <div class="col-sm-2">
      <%= render_component 'MultiSelectedOperation', {
                           text: t('.reimport_selected'),
                           operation: 'reimport',
                           path: lcms_engine.reimport_selected_admin_documents_path(query: @query_params),
                           btnStyle: 'btn-warning',
                           wrapperClass: 'm-1 col' } %>
    </div>
    <div class="col-sm-3">
      <%= render_component 'MultiSelectedOperation', {
                           text: t('.delete_selected'),
                           operation: 'delete',
                           path: lcms_engine.delete_selected_admin_documents_path(query: @query_params),
                           btnStyle: 'btn-danger',
                           wrapperClass: 'm-1 col' } %>
    </div>
  </div>
  <hr>
  <div class="row">
    <table class="lessons-table table">
      <tr>
        <th></th>
        <th>ID</th>
        <th>Curriculum</th>
        <th>Title</th>
        <th>File Name</th>
        <th>Materials</th>
        <th>Reimported at</th>
        <th>Status</th>
        <th></th>
      </tr>

      <% @documents.each do |lesson| %>
        <% cache lesson do %>
          <tr id=lesson_<%= lesson.id %>>
          <td><%= check_box_tag 'selected_ids[]', lesson.id, selected_id?(lesson.id), class: 'c-selected-ids' %></td>
          <td class="u-text--right"><%= lesson.id %></td>
          <td><%= Lcms::Engine::Breadcrumbs.new(lesson.resource).short_title if lesson.resource %></td>
          <td><%= link_to lesson.resource&.title, dynamic_document_path(lesson, request.query_parameters), target: '_blank' %></td>
          <td>
            <% if lesson.math? %>
              <% if lesson.file_url.present? %>
                <strong>Core: </strong>
                <%= link_to lesson.name, lesson.file_url, target: '_blank' %><br/>
              <% end %>
            <% else %>
              <%= link_to lesson.name, lesson.file_url, target: '_blank' %>
            <% end %>
          </td>
          <td><%= render partial: 'lcms/engine/admin/documents/materials_links', locals: { lesson: lesson } %></td>
          <td class="u-txt--small"><%= lesson.reimported_at.to_s.presence || lesson.updated_at.to_s %>
          <td class="lessons-table__status">
            <%= lesson.active? ? 'active' : 'inactive' %>
            <% unless lesson.reimported %>
              <br/>
              <span class="failed">failed</span>
            <% end %>
          </td>
          <td class="lessons-table__btns">
            <%= render partial: 'lcms/engine/admin/documents/reimport', locals: { btn_class: 'btn btn-warning btn-sm m-1', lesson: lesson, query: @query_params } %>
            <%= link_to t('ui.delete'), lcms_engine.admin_document_path(lesson, query: @query_params), class: 'btn btn-danger btn-sm m-1', data: { confirm: t('ui.are_you_sure'), 'turbo-method': :delete } %>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="row">
    <%= will_paginate @documents, list_classes: %w(pagination d-flex justify-content-center) %>
  </div>

</div>
